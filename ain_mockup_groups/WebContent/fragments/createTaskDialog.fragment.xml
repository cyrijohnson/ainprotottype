<Dialog xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	title="All Groups">
	<layout:VerticalLayout>
		<TextArea id="addTaskDescription" rows = "5" width="100%" placeholder="Write a Message">
		</TextArea>
		<IconTabBar id = "iconTabBarContent" select="handleIconTabBarSelect">
			<items>
				<IconTabFilter icon="sap-icon://notes" key="addAssignee"></IconTabFilter>
				<IconTabFilter icon="sap-icon://person-placeholder"></IconTabFilter>
				<IconTabFilter icon="sap-icon://attachment"></IconTabFilter>
				<IconTabFilter icon="sap-icon://tree"></IconTabFilter>
				<IconTabFilter icon="sap-icon://edit"></IconTabFilter>
			</items>
		</IconTabBar>
		
		<ActionSelect id="typeOfTaskActionSelect" items="{/priorityLevelData}">
			<items>
				<core:Item key="{levelKey}" text="{levelName}"></core:Item>
			</items>
		</ActionSelect>
	</layout:VerticalLayout>
	<beginButton>
		<Button text="Add"></Button>
	</beginButton>
	<endButton>
		<Button text="Cancel" press="onPressHandleClose"></Button>
	</endButton>
</Dialog>